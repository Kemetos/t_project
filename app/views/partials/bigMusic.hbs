<script>
    $(document).ready(function(){

        $('.duration img').css('visibility', 'hidden');
        $('.list-songs > div').click(function() {

            $('.list-songs > div').css('color', '#FFF');
            $('.album > div').css('color', '#FFF');
            var song = $(this).attr('class');

            $(".list-songs > div[class='"+song+"']").css('color', '#AABA58');
            $(".album > div[class='"+song+"']").css('color', '#AABA58');

            $(".duration > img").css('visibility', 'hidden');
            $(".duration > img[class='"+song+"']").css('visibility', 'visible');

        });

        $('.playlist-songs img').css('visibility', 'hidden');
        $('.playlist > div').click(function() {

            $('.playlist > div').css('color', '#FFF');
            $('.artist> div').css('color', '#FFF');
            var song = $(this).attr('class');

            $(".playlist > div[class='"+song+"']").css('color', '#AABA58');
            $(".artist > div[class='"+song+"']").css('color', '#AABA58');

            $(".playlist-songs > img").css('visibility', 'hidden');
            $(".playlist-songs > img[class='"+song+"']").css('visibility', 'visible');

        });

    });

</script>
